# ================================
# Database configuration
# ================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=secret
POSTGRES_DB=mydb

# Primary DB (write operations)
DB_PRIMARY_HOST=localhost
DB_PRIMARY_PORT=5432
DB_PRIMARY_USER=postgres
DB_PRIMARY_PASSWORD=secret
DB_PRIMARY_NAME=mydb
DB_PRIMARY_URL=postgres://postgres:secret@localhost:5432/mydb?sslmode=disable

# Replica DB (read operations)
DB_REPLICA_HOST=localhost
DB_REPLICA_PORT=5433
DB_REPLICA_USER=postgres
DB_REPLICA_PASSWORD=secret
DB_REPLICA_NAME=mydb
DB_REPLICA_URL=postgres://postgres:secret@localhost:5433/mydb?sslmode=disable

# Replication user (khusus untuk sync primary <-> replica)
REPL_USER=replicator
REPL_PASSWORD=replsecret

# ================================
# Application config
# ================================
APP_ENV=development
APP_PORT=8080
JWT_SECRET=your-secret-key-change-this-in-production
